<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Anime.Controls"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:Anime.Views"
             x:Class="Anime.Views.SearchView"
             BackgroundColor="#272726">
    <ContentView.Content >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Entry Placeholder="Поиск"
                   Margin="30,30,30,20" HeightRequest="65" FontSize="18"/>

            <controls:XFrame Grid.Row="1" MultiCornerRadius="15,15,0,0" BackgroundColor="#313130" Padding="20">
                <local:GenresTypesView BindingContext="{Binding TypesViewModel}"/>
            </controls:XFrame>

            <controls:XFrame Grid.Row="2" MultiCornerRadius="15,15,0,0" Margin="0,-15,0,0"
                             BackgroundColor="#272726" Padding="20,20,20,0">
                <local:GenresTypesView BindingContext="{Binding GenresViewModel}"/>
            </controls:XFrame>
        </Grid>
    </ContentView.Content>
</ContentView>