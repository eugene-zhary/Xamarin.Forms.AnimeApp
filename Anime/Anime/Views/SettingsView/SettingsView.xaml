<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Anime.Views.SettingsView"
             BackgroundColor="{DynamicResource BackColor}"
             xmlns:controls="clr-namespace:Anime.Controls"
             xmlns:local ="clr-namespace:Anime.Views">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Margin="10,15" Text="Settings" FontSize="20" HorizontalOptions="Center" TextColor="{DynamicResource PrimaryColor}"/>

            <controls:XFrame Grid.Row="1" Style="{StaticResource ContentFrameStyle}">
                <Grid Grid.Row="1" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <local:AccountSettingsView Grid.Row="0" BindingContext="{Binding AccountSettingsViewModel}"/>
                    <local:ColorSettingsView Grid.Row="1" BindingContext="{Binding ColorSettingsViewModel}"/>
                </Grid>
            </controls:XFrame>
        </Grid>
    </ContentPage.Content>
</ContentPage>